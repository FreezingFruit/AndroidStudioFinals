<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CategoryChoiceActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:backgroundTint="@color/brown"
        app:cardCornerRadius="0dp"
        android:elevation="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="@color/brown2"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="250dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="250dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/iv_userProfile"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@drawable/default_profile"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, "
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tvWelcomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/btnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/btnApartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apartment"
                    android:backgroundTint="@color/brown2"
                    android:layout_weight="1"
                    android:padding="25dp"
                    android:layout_marginBottom="25dp"/>
                <Button
                    android:id="@+id/btnDuplex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duplex"
                    android:backgroundTint="@color/brown2"
                    android:layout_weight="1"
                    android:padding="25dp"
                    android:layout_marginBottom="25dp"/>

                <Button
                    android:id="@+id/btnCabin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cabin"
                    android:backgroundTint="@color/brown2"
                    android:layout_weight="1"
                    android:padding="25dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>